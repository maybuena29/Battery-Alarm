<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false">

        <FrameLayout
            android:id="@+id/myFrame"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:background="@drawable/blue_bg">

            <ImageView
                android:id="@+id/myImgView"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/alarmlogo"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="20dp"
            android:clipChildren="false">

            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="right"
                android:text="BATTERY \nALARM"
                android:fontFamily="@font/aquire_bold"
                android:textSize="65dp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/batteryPercentage"
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="150dp"
            android:layout_marginTop="-300dp">

            <ImageView
                android:id="@+id/imgBattPercent"
                android:layout_width="170dp"
                android:layout_height="240dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="-20dp"
                android:src="@drawable/battery_percent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/currentBatt"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:layout_marginLeft="60dp"
                    android:text="..."
                    android:fontFamily="@font/aquire_bold"
                    android:textSize="80dp"
                    android:textColor="@color/blue"/>

                <TextView
                    android:id="@+id/battPercent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="60dp"
                    android:text="Current Battery \nLevel"
                    android:fontFamily="@font/aquire_bold"
                    android:textSize="15dp"
                    android:textColor="@color/blue"/>

            </RelativeLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-100dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/blue_border_rounded_corner">

            <EditText
                android:id="@+id/batteryInput"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="200dp"
                android:maxLines="1"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="number"
                android:gravity="center_vertical"
                android:maxLength="3"
                android:hint="Enter Battery Level"
                android:textCursorDrawable="@drawable/cursor_color"
                android:fontFamily="@font/aquire"
                android:textSize="17dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/blue"/>

            <ImageView
                android:id="@+id/batteryLogo"
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:src="@drawable/battery_logo"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/blue_border_rounded_corner">

            <!--<Spinner
                android:id="@+id/spinRingtone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Enter Battery Level"
                android:spinnerMode="dropdown"
                android:textCursorDrawable="@drawable/cursor_color"
                android:fontFamily="@font/aquire"
                android:textSize="18dp"
                android:prompt="@string/ringtone"
                android:textColor="@color/blue"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:paddingRight="20dp"
                    android:id="@+id/spinRingtone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    style="@style/Widget.AppCompat.Spinner.DropDown"/>

                <ImageView
                    android:id="@+id/ringtoneLogo"
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ringtone_logo"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/blue_border_rounded_corner">

            <Button
                android:id="@+id/btnStartAlarm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Start alarm"
                android:paddingTop="10dp"
                android:textColorHint="@color/gray"
                android:paddingBottom="10dp"
                android:fontFamily="@font/aquire_bold"
                android:textSize="18dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/blue_border_rounded_corner">

            <Button
                android:id="@+id/btnStopAlarm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Stop alarm"
                android:paddingTop="10dp"
                android:textColorHint="@color/gray"
                android:paddingBottom="10dp"
                android:fontFamily="@font/aquire_bold"
                android:textSize="18dp"
                android:background="@drawable/red_fill_background"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>